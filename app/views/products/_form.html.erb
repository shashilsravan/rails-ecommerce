<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field py-2">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", plcaeholder: "Name of the product" %>
  </div>

  <div class="field py-2">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: "5" %>
  </div>

  <div class="field py-2">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="field py-2">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-control" %>
  </div>

  <div class="field py-2">
    <%= form.label :image, "Upload product image", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
