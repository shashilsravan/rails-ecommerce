<%= form_with url: "/cart", method: :put, class: "updateCartForm" do |form| %>
    <div class="input-group my-2">
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <%= form.number_field :quantity, value: check_quantity(current_user.id, @product.id),
            class: "form-control", required: true, in: 1.0..@product.stock,
            step: 1.0, placeholder: "Enter quantity of the product" %>
        <%= form.submit "Update cart", class: "btn btn-primary" %>
    </div>
<% end %>